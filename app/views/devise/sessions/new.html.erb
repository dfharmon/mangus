<br/>
<div class="row">
  <div class="small-4"><h2>Sign In</h2></div>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="small-12 medium-6 large-4"><%= f.email_field :email, :autofocus => true, placeholder: 'Email' %></div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 large-4"><%= f.password_field :password, placeholder: 'Password' %></div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 large-4"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 large-4"><%= f.submit "Sign in", class: 'button small-12' %></div>
    </div>
<% end %>
<br />

<div class="row">
  <div class="small-12 devise-links"> <%= render "devise/shared/links" %>
  </div>
</div>